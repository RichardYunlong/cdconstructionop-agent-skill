{
  "name": "construction_opportunity_analyzer",
  "display_name": "建筑行业新商机分析",
  "version": "1.0.0",
  "description": "根据建筑方向、客户类型和商机状态分析建筑行业新商机清单，帮助销售团队发现潜在客户",
  "author": "Construction Digitalization Team",
  "category": "business_analysis",
  "tags": ["construction", "opportunity", "analysis", "sales", "crm"],
  "api_version": "1.0",
  "entry_point": "main:analyze_opportunities",
  "input_schema": {
    "type": "object",
    "properties": {
      "construction_direction": {
        "type": "string",
        "description": "建筑方向：结构工程、岩土工程、桥梁与隧道工程、道路与铁道工程、市政工程、水利工程，或自定义内容（100字内）",
        "enum": ["结构工程", "岩土工程", "桥梁与隧道工程", "道路与铁道工程", "市政工程", "水利工程", "自定义"]
      },
      "customer_type": {
        "type": "string",
        "description": "客户类型：行政机关、事业单位、央企、国企、上市公司、民营企业，或自定义内容（100字内）",
        "enum": ["行政机关", "事业单位", "央企", "国企", "上市公司", "民营企业", "自定义"]
      },
      "business_status": {
        "type": "string",
        "description": "商机状态：意向阶段、争夺阶段、竞标阶段、废标重启、成果扩大，或自定义内容（100字内）",
        "enum": ["意向阶段", "争夺阶段", "竞标阶段", "废标重启", "成果扩大", "自定义"]
      }
    },
    "required": ["construction_direction", "customer_type", "business_status"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "opportunities": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "company_name": {
              "type": "string",
              "description": "公司名称"
            },
            "project_info": {
              "type": "string",
              "description": "项目信息，50字以内",
              "maxLength": 50
            },
            "proof_info": {
              "type": "string",
              "description": "证明信息，包括网站公告、招标信息等，255字以内",
              "maxLength": 255
            },
            "inferred_info": {
              "type": "string",
              "description": "基于网络信息推断的商机信息，255字以内",
              "maxLength": 255
            },
            "marketing_plan": {
              "type": "string",
              "description": "营销方案，255字以内",
              "maxLength": 255
            }
          },
          "required": ["company_name", "project_info", "proof_info", "inferred_info", "marketing_plan"]
        },
        "maxItems": 5,
        "minItems": 5
      }
    },
    "required": ["opportunities"]
  }
}